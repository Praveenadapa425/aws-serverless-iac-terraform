# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_DEFAULT_REGION=us-east-1

# Terraform Remote State (update with your actual values)
TF_VAR_terraform_state_bucket=your-terraform-state-bucket
TF_VAR_terraform_state_lock=your-terraform-state-lock-table

# Environment Variables for Terraform
TF_VAR_environment=dev
TF_VAR_project_name=serverless-api
TF_VAR_region=us-east-1
TF_VAR_api_gateway_stage=v1

# Lambda Configuration
TF_VAR_lambda_timeout=30
TF_VAR_lambda_memory_size=128

# DynamoDB Configuration
TF_VAR_dynamodb_read_capacity=5
TF_VAR_dynamodb_write_capacity=5

# CloudWatch Log Retention
TF_VAR_log_retention_days=14

# Alarm Configuration
TF_VAR_alarm_threshold_errors=5
TF_VAR_alarm_evaluation_periods=1
TF_VAR_alarm_period=300

# API Base URL for testing (after deployment)
API_BASE_URL=https://your-api-id.execute-api.us-east-1.amazonaws.com/v1